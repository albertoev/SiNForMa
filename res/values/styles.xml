<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="General">
        <item name="android:typeface">serif</item>        
        <item name="android:textColor">#071700</item>
	</style>

    <style name="GeneralCentrado" parent="General">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">.50</item>
		<item name="android:gravity">center_horizontal|center_vertical</item> 
		<item name="android:textSize">18sp</item>
	</style>

    <style name="TextBig" parent="GeneralCentrado">
		<item name="android:inputType">none</item>
	</style>
    
    <style name="EditText" parent="GeneralCentrado">
		<item name="android:inputType">text</item>
		<item name="android:background">#BFFFAE</item>
	</style>
    
    <style name="ImagePencils" parent="General">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">.50</item>
	</style>
    		
	<style name="SpinnerTablas" parent="General">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">.25</item>
		<item name="android:gravity">center</item> 
	</style>

    <style name="FilaPencils" parent="General">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">.14</item>
    </style>

    <style name="FilaTablas" parent="General">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">.11</item>
    </style>

    <style name="BotonTablas" parent="General">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">.12</item>
        <item name="android:layout_marginLeft">0dp</item>
       <item name="android:layout_marginRight">0dp</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BotonInferior" parent="General">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">.25</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="BotonLapices" parent="General">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">.16</item>
        <item name="android:textSize">14sp</item>
  	</style>

    <style name="BotonLapices2" parent="General">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">.25</item>
        <item name="android:textSize">14sp</item>
  	</style>

    <style name="BotonMain" parent="General">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textSize">14sp</item>
  	</style>

    <style name="FilaMain" parent="General">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">.20</item>
  	</style>
</resources>
